<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppOperaciones" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorEdit</item>
        <item name="colorSecondaryVariant">@color/colorEdit</item>
        <item name="colorOnSecondary">@color/ic_log_operacion</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:textColorSecondary">@color/white_opacity</item>
        <item name="colorSurface">@color/white</item>

        <!-- Customize your theme here. -->

    </style>

    <style name="Theme.AppOperaciones.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AppOperaciones.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AppOperaciones.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomAlertDialog" parent="android:style/Theme.Dialog">
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:backgroundDimEnabled">true</item>
    <item name="android:width">300dip</item>
    <item name="android:textColor">@color/blue</item>
    </style>

    <style name="EditTextCustomStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">#FF0000</item> <!-- Cambia el color deseado aquÃ­ -->
    </style>

</resources>